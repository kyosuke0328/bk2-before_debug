<div class="body">
	<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
  <div class="container">
     <p class="notice"></p>
     		<div class="error_messages">
				<% if @new_book.errors.any? %>
				    <div class="error_explanation">
				      <h2><%= @new_book.errors.count %>errors prohibited this book from being saved:</h2>
				      <ul>
				    <% @new_book.errors.full_messages.each do |message| %>
				          <li><%= message %></li>
				    <% end %>
				      </ul>
				    </div>
				<% end %>
			</div> 
      	<div class="row">
          	<div class="col-xs-3">
		    	<h2>User info</h2>
		    	<%= render "users/profile", user: @user %>
			<h2>New book</h2>
			<!-- form_for部分 -->
				<%= render "books/newform", book: @new_book %>
	</div>

				<div class="col-xs-9">
					<h2>Books</h2>
						<table class="table table-hover table-inverse">
							<thead>
								<tr>
									<th></th>
									<th>Title</th>
									<th>Opinion</th>
									<th colspan="3"></th>
								</tr>
							</thead>
								<tbody>
									<% @books.each do |b| %>
										<tr>
											<td><%= attachment_image_tag b.user , :profile_image , fallback: "no_image.jpg" %></td>
											<td><%= link_to book_path(b) do %><%= b.title %>
												<% end %>
											</td>
											<td><%= b.body %></td>
										</tr>
									<% end %>
								</tbody>
					</table>
				</div>
			</div>		
		</div>

	</div>
</div>